<div class="main">
<h1>編集画面だお</h1>
    <div class="form">
        <div class="form-body">
            <%= form_tag("/posts/#{@post.id}/update") do %>
                <textarea name="title" class="textarea-title"value="<%= @post.title %>"></textarea>
                <textarea name="content" class="textarea-content"><%= @post.content %></textarea>
                <input type="submit" value="保存">
            <% end %>
        </div>
    </div>
</div>