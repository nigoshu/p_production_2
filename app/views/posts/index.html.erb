<h1>投稿一覧だお</h1>

<section class="card">
    <div class="card-content">
        <% @posts.each do |post| %>
        <h2 class="card-title"><%= link_to(post.title, "/posts/#{post.id}") %></h2>
            <div class="card-text">
            
            <div class="userIndex">
                <%= link_to(post.content, "/posts/#{post.id}") %>
            </div>
            </div>
        <% end %>
    </div>
</section>